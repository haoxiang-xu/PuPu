{
  "name": "pupu",
  "version": "0.0.4",
  "author": {
    "name": "Haoxiang Xu",
    "email": "haoxiangxu1998@gmail.com"
  },
  "description": "",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "axios": "^1.7.9",
    "cra-template": "1.2.0",
    "license": "^1.0.3",
    "node-pty": "^1.0.0",
    "react": "^18.3.1",
    "react-code-blocks": "^0.1.6",
    "react-dom": "^18.3.1",
    "react-latex-next": "^3.0.0",
    "react-router-dom": "^7.1.5",
    "react-scripts": "5.0.1",
    "react-showdown": "^2.3.1",
    "react-spinners": "^0.15.0",
    "react-textarea-autosize": "^8.5.7",
    "remixicon": "^4.6.0",
    "web-vitals": "^4.2.4",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "main": "public/electron.js",
  "scripts": {
    "react-start": "cross-env BROWSER=none PORT=3000 react-scripts start",
    "electron-start": "electron . --no-sandbox",
    "start": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "npx electron-rebuild -f -w node-pty --verbose"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "build": {
    "appId": "com.haoxiangxu.pupu",
    "productName": "PuPu",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/logo_256x256.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "public/logo_256x256.png"
    },
    "extraResources": [
      {
        "from": "public/venv",
        "to": "venv",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/child_processes",
        "to": "child_processes"
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "@electron/remote": "^2.1.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^25.1.8"
  },
  "license": "MIT"
}
